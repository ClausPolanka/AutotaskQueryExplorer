<Window x:Class="AutotaskQueryExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:login="clr-namespace:AutotaskQueryExplorer.Login"
        xmlns:results="clr-namespace:AutotaskQueryExplorer.Results"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <login:LoginControl Visibility="{Binding LoginVisibility}" DataContext="{Binding LoginViewModel}" Margin="104,80,87,80"/>
        <results:QueryTool Visibility="{Binding MainVisibility}" HorizontalContentAlignment="Center" DataContext="{Binding QueryToolViewModel}"/>
    </Grid>
</Window>
